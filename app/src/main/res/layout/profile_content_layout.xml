<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/openmrsid_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/last_name_editText"
        android:layout_marginTop="24dp"
        android:textColor="@android:color/white"
        android:text=""
        android:layout_marginEnd="16dp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/openmrsid_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/phr_version_text"
        android:labelFor="@+id/middle_name_textView"
        android:layout_alignBaseline="@+id/middle_name_textView"
        android:layout_alignBottom="@+id/middle_name_textView"
        android:layout_alignStart="@+id/last_name_editText"
        android:inputType="text" />

    <TextView
        android:id="@+id/profile_first_name_textView"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/openmrs_id_text"
        android:textColor="@android:color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/profile_fast_name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/profile_first_name_textView"
        android:layout_alignBottom="@+id/profile_first_name_textView"
        android:layout_centerHorizontal="true"
        android:text="@string/sample_openmrs_id"
        android:textColor="@android:color/white"
        android:inputType="number" />

    <TextView
        android:id="@+id/last_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_fast_name_editText"
        android:layout_marginTop="28dp"
        android:textColor="@android:color/white"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/user_first_name_field_text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/last_name_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/user_first_name"
        android:layout_alignBaseline="@+id/last_name_textView"
        android:layout_alignBottom="@+id/last_name_textView"
        android:layout_alignStart="@+id/profile_fast_name_editText"
        android:inputType="textAutoComplete" />

    <TextView
        android:id="@+id/middle_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/openmrsid_textView"
        android:layout_alignBottom="@+id/openmrsid_textView"
        android:layout_toEndOf="@+id/openmrsid_textView"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/user_middle_name_field_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/openmrsid_editText"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:layout_toEndOf="@+id/openmrsid_textView"
        android:text="@string/user_middle_name_field_text"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <EditText
        android:id="@+id/lname_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:labelFor="@+id/middle_name_textView"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/openmrsid_editText"
        android:text="@string/user_middle_name"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lname_editText"
        android:layout_marginTop="12dp"
        android:textColor="@android:color/white"
        android:layout_toEndOf="@+id/openmrsid_textView"
        android:text="@string/user_dob_text_field"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dob_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_alignStart="@+id/lname_editText"
        android:layout_below="@+id/lname_editText"
        android:text="@string/user_dob"
        android:inputType="date" />



</RelativeLayout>